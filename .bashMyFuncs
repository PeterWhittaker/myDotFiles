die () {
    echo $@
    exit 1
}

# frikkin' MacOS differences da marde....
if ! isMacOS; then 
    seconds () {
        dateThis="${@:-$(date)}";
        date +%s -d "${dateThis}"
    }

    when () {
        date -d "@${1:-$(seconds)}"
    }
fi

idf () {
    printf "\n"
    for ((cnt=1; cnt <= $#; cnt++)); do
        local file="${!cnt}"
        local fileInfo
        fileInfo=$(file "$file")
        printf "%s\n" "$fileInfo"
        local infoLen=${#fileInfo}
        while ((infoLen--)); do printf "="; done; printf "\n"
        ls -l "$file"
        printf "\n"
        head -5 "$file"
        [[ $cnt -lt $# ]] && printf "\n"
    done
    true
}
